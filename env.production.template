# Production Environment Template
# Copy this file to .env.production and update the values

# Database Configuration
DATABASE_URL=postgresql://ytclone:securepassword@localhost:5432/ytclone
DB_PASSWORD=securepassword

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000

# SMTP Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=200MB
UPLOAD_DIR=uploads

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production URLs (Update these for your deployment)
PRODUCTION_API_URL=https://your-api-domain.com
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
