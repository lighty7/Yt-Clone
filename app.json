{
  "name": "YouTube Clone",
  "description": "A YouTube clone built with React, Node.js, and PostgreSQL",
  "repository": "https://github.com/yourusername/yt-clone",
  "logo": "https://via.placeholder.com/150x150/FF0000/FFFFFF?text=YT",
  "keywords": ["youtube", "clone", "react", "nodejs", "postgresql", "video", "social"],
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
      "generator": "secret"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "npx prisma migrate deploy"
  }
}
